{
  "manifest_version": 3,
  "name": "sact",
  "description": "Search and Act on the web",
  "author": "Kobbi Gal",
  "version": "0.0.1",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "commands"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "commands": {
    "run-sact": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Run \"sact\" on the current page."
    }
  }
}
