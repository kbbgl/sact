{
  "manifest_version": 3,
  "name": "sact",
  "description": "Search and Act on the web",
  "author": "Kobbi Gal",
  "version": "0.0.1",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "commands"],
  "action": {
    "default_title": "sact"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "commands": {
    "run-sact": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Run \"sact\" on the current page."
    }
  }
}
